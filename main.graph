pow :: (value: int, power: int) -> int {
    if power == 0 {
        <- 1;
    }
    if power == 1 {
        <- value;
    }

    counter := 0;
    total := value;
    while counter < power - 1 {
        total = total * value;
        counter = counter + 1;
    }
    <- total;
}


